<Window x:Class="Flashcards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flashcards Application" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <TextBlock Text="Flashcards Study Application" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Menu -->
            <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Main Menu" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="5,5,5,15"
                               Foreground="#333333"/>
                    
                    <Button x:Name="btnManageStacks" 
                            Content="Manage Stacks" 
                            Click="BtnManageStacks_Click"
                            HorizontalAlignment="Stretch"/>
                    
                    <Button x:Name="btnManageFlashcards" 
                            Content="Manage Flashcards" 
                            Click="BtnManageFlashcards_Click"
                            HorizontalAlignment="Stretch"/>
                    
                    <Button x:Name="btnStudySession" 
                            Content="Study Session" 
                            Click="BtnStudySession_Click"
                            Background="#FF9800"
                            HorizontalAlignment="Stretch"/>
                    
                    <Button x:Name="btnViewSessions" 
                            Content="View Study Sessions" 
                            Click="BtnViewSessions_Click"
                            Background="#9C27B0"
                            HorizontalAlignment="Stretch"/>
                    
                    <Button x:Name="btnYearlyReport" 
                            Content="Yearly Report" 
                            Click="BtnYearlyReport_Click"
                            Background="#3F51B5"
                            HorizontalAlignment="Stretch"/>
                    
                    <Button x:Name="btnExit" 
                            Content="Exit" 
                            Click="BtnExit_Click"
                            Background="#F44336"
                            HorizontalAlignment="Stretch"
                            Margin="5,20,5,5"/>
                </StackPanel>
            </Border>
            
            <!-- Content Area -->
            <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
    </Grid>
</Window>
 
