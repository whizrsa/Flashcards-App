<Page x:Class="Flashcards.Views.YearlyReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Yearly Report">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Yearly Study Session Report" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,20"/>
        
        <!-- Year Selection -->
        <Border Grid.Row="1" 
                Background="#F9F9F9" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Select Year" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="cmbYear" 
                              Grid.Column="0"
                              FontSize="14"/>
                    <Button x:Name="btnGenerateReport" 
                            Grid.Column="1"
                            Content="Generate Report" 
                            Click="BtnGenerateReport_Click"
                            Width="150"
                            Margin="10,0,0,0"/>
                    <Button x:Name="btnExportPDF" 
                            Grid.Column="2"
                            Content="Export to PDF" 
                            Click="BtnExportPDF_Click"
                            Width="150"
                            Margin="10,0,0,0"
                            Background="#FF5722"
                            IsEnabled="False"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Report Display -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- No Data Message -->
            <TextBlock x:Name="txtNoData" 
                       Grid.Row="0"
                       Text="Select a year and click 'Generate Report' to view study session data." 
                       FontSize="16"
                       Foreground="#999999"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,50,0,0"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
            
            <!-- Report Grid -->
            <ScrollViewer Grid.Row="1" 
                          x:Name="ReportScrollViewer"
                          Visibility="Collapsed"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock x:Name="txtReportTitle" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>
                    
                    <DataGrid x:Name="dgReport" 
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              HeadersVisibility="All"
                              GridLinesVisibility="All"
                              BorderBrush="#CCCCCC"
                              BorderThickness="1">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
