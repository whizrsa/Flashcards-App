<Page x:Class="Flashcards.Views.ManageStacksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Stacks">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Manage Stacks" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,20"/>
        
        <!-- Add Stack Section -->
        <Border Grid.Row="1" 
                Background="#F9F9F9" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Add New Stack" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtStackName" 
                             Grid.Column="0"
                             Margin="0,0,10,0"/>
                    <Button x:Name="btnAddStack" 
                            Grid.Column="1"
                            Content="Add Stack" 
                            Click="BtnAddStack_Click"
                            Width="120"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- View/Delete Stacks Section -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Available Stacks" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <Button x:Name="btnRefresh" 
                        Content="Refresh" 
                        Click="BtnRefresh_Click"
                        Width="100"
                        Margin="15,0,0,0"/>
            </StackPanel>
            
            <DataGrid x:Name="dgStacks" 
                      Grid.Row="1"
                      SelectionMode="Single"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Stack Name" Binding="{Binding Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <Button x:Name="btnDeleteStack" 
                    Grid.Row="2"
                    Content="Delete Selected Stack" 
                    Click="BtnDeleteStack_Click"
                    Background="#F44336"
                    Width="200"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"/>
        </Grid>
    </Grid>
</Page>
