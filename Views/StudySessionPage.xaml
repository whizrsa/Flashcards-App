<Page x:Class="Flashcards.Views.StudySessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Study Session">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Study Session" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,20"/>
        
        <!-- Content Stack -->
        <StackPanel Grid.Row="1" x:Name="ContentPanel">
            <!-- Stack Selection View -->
            <StackPanel x:Name="StackSelectionPanel" Visibility="Visible">
                <TextBlock Text="Select a stack to study:" 
                           FontSize="18" 
                           Margin="0,0,0,15"/>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Filter by Category:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" 
                              x:Name="cmbStudyCategory"
                              SelectionChanged="CmbStudyFilter_Changed">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Animals"/>
                        <ComboBoxItem Content="Cars"/>
                        <ComboBoxItem Content="Countries"/>
                        <ComboBoxItem Content="Geography"/>
                        <ComboBoxItem Content="History"/>
                        <ComboBoxItem Content="Languages"/>
                        <ComboBoxItem Content="Mathematics"/>
                        <ComboBoxItem Content="Science"/>
                        <ComboBoxItem Content="Sports"/>
                        <ComboBoxItem Content="Technology"/>
                        <ComboBoxItem Content="General"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Column="2" 
                               Text="Difficulty:" 
                               VerticalAlignment="Center"
                               Margin="15,0,10,0"/>
                    <ComboBox Grid.Column="3" 
                              x:Name="cmbStudyDifficulty"
                              SelectionChanged="CmbStudyFilter_Changed">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Easy"/>
                        <ComboBoxItem Content="Medium"/>
                        <ComboBoxItem Content="Hard"/>
                    </ComboBox>
                    
                    <Button Grid.Column="5"
                            x:Name="btnResetFilters"
                            Content="Reset Filters"
                            Click="BtnResetFilters_Click"
                            Width="120"
                            Margin="15,0,0,0"/>
                </Grid>
                
                <ListBox x:Name="lstStacks" 
                         Height="250"
                         SelectionMode="Single"
                         MouseDoubleClick="LstStacks_MouseDoubleClick"
                         SelectionChanged="LstStacks_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDDDDD" 
                                    BorderThickness="1" 
                                    CornerRadius="5" 
                                    Padding="15" 
                                    Margin="5"
                                    Background="White">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#2196F3"/>
                                    <TextBlock Text="{Binding Id, StringFormat='Stack ID: {0}'}" 
                                               FontSize="12" 
                                               Foreground="#666666"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Margin="0,15,0,0">
                    <TextBlock x:Name="txtCardCount"
                               Text="Total cards available: 0"
                               FontSize="14"
                               Foreground="#666666"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Number of questions to study:" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <ComboBox x:Name="cmbQuestionCount" 
                                  Width="100"
                                  SelectedIndex="4">
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="15"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="All"/>
                        </ComboBox>
                        <TextBlock x:Name="txtQuestionCountInfo"
                                   Text=""
                                   FontSize="12"
                                   Foreground="#999999"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <Button x:Name="btnStartStudy" 
                        Content="Start Study Session" 
                        Click="BtnStartStudy_Click"
                        Width="200"
                        Margin="0,15,0,0"
                        Background="#FF9800"/>
            </StackPanel>
            
            <!-- Flashcard Study View -->
            <Grid x:Name="FlashcardPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Progress -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock x:Name="txtProgress" 
                               Text="Question 1 of 10" 
                               FontSize="16"
                               Foreground="#666666"/>
                    <TextBlock x:Name="txtScore" 
                               Text="Score: 0" 
                               FontSize="16"
                               Foreground="#4CAF50"
                               Margin="30,0,0,0"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="txtCurrentCategory" 
                               FontSize="14"
                               Foreground="#9C27B0"
                               Margin="30,0,0,0"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtCurrentDifficulty" 
                               FontSize="14"
                               Margin="15,0,0,0"
                               FontWeight="SemiBold"/>
                </StackPanel>
                
                <!-- Flashcard -->
                <Border Grid.Row="1" 
                        Background="#F0F7FF" 
                        CornerRadius="10" 
                        Padding="30"
                        BorderBrush="#2196F3"
                        BorderThickness="2"
                        MinHeight="250">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Question:" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtQuestion" 
                                   Text="What is 2+2?" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Your Answer:" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   Margin="0,10,0,10"/>
                        <TextBox x:Name="txtUserAnswer" 
                                 FontSize="16"
                                 Height="40"
                                 KeyDown="TxtUserAnswer_KeyDown"/>
                        
                        <!-- Feedback Panel -->
                        <Border x:Name="FeedbackPanel" 
                                Visibility="Collapsed" 
                                CornerRadius="5" 
                                Padding="15" 
                                Margin="0,15,0,0">
                            <StackPanel>
                                <TextBlock x:Name="txtFeedback" 
                                           FontSize="16" 
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="txtCorrectAnswer" 
                                           FontSize="14"
                                           Margin="0,5,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button x:Name="btnSubmitAnswer" 
                            Content="Submit Answer" 
                            Click="BtnSubmitAnswer_Click"
                            Width="150"
                            Visibility="Visible"/>
                    <Button x:Name="btnNext" 
                            Content="Next Question" 
                            Click="BtnNext_Click"
                            Width="150"
                            Visibility="Collapsed"
                            Background="#4CAF50"/>
                    <Button x:Name="btnFinish" 
                            Content="Finish Session" 
                            Click="BtnFinish_Click"
                            Width="150"
                            Visibility="Collapsed"
                            Background="#2196F3"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
            
            <!-- Results View -->
            <StackPanel x:Name="ResultsPanel" Visibility="Collapsed">
                <TextBlock Text="Study Session Complete!" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#4CAF50"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,20"/>
                
                <Border Background="#F9F9F9" 
                        CornerRadius="10" 
                        Padding="30"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="txtFinalScore" 
                                   Text="Your Score: 8/10" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="#2196F3"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>
                        <TextBlock x:Name="txtPercentage" 
                                   Text="80%" 
                                   FontSize="48" 
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtSessionSummary" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Button x:Name="btnNewSession" 
                        Content="Start New Session" 
                        Click="BtnNewSession_Click"
                        Width="200"
                        Background="#FF9800"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
