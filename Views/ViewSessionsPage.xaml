<Page x:Class="Flashcards.Views.ViewSessionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="View Sessions">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="350"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title -->
            <TextBlock Grid.Row="0" 
                       Text="Study Sessions History" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#333333"
                       Margin="0,0,0,20"/>
            
            <!-- Sessions Grid -->
            <DataGrid x:Name="dgSessions" 
                      Grid.Row="1"
                      SelectionMode="Single"
                      AutoGenerateColumns="False"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Session ID" Binding="{Binding Id}" Width="100"/>
                    <DataGridTextColumn Header="Stack ID" Binding="{Binding StackId}" Width="100"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='yyyy-MM-dd HH:mm'}" Width="*" MinWidth="150"/>
                    <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Statistics Panel -->
            <Border Grid.Row="2" 
                    Background="#F9F9F9" 
                    CornerRadius="5" 
                    Padding="20" 
                    Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Total Sessions" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtTotalSessions" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#2196F3"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Average Score" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtAverageScore" 
                                   Text="0.0" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Highest Score" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtHighestScore" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#FF9800"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,15,0,10">
                <Button x:Name="btnRefresh" 
                        Content="Refresh" 
                        Click="BtnRefresh_Click"
                        Width="120"/>
                <Button x:Name="btnDeleteSession" 
                        Content="Delete Selected" 
                        Click="BtnDeleteSession_Click"
                        Background="#F44336"
                        Width="150"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
